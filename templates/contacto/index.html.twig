{% extends 'base.html.twig' %}

{% block title %}Contacto - HUGO Sushi{% endblock %}

{% block body %}
<!-- Sección de Contacto - Estética HUGO Sushi -->
<section class="sushi-section section-dark" style="padding: 8rem 0 6rem;">
    <div class="container">
        <!-- Encabezado -->
        <div class="section-header">
            <span class="sushi-badge badge-primary">Contáctanos</span>
            <h2 class="section-title">¿Listo para una experiencia única?</h2>
            <p class="section-subtitle">
                Realiza tu consulta!
            </p>
        </div>

        <div class="contact-content" style="display: grid; grid-template-columns: 1.2fr 0.8fr; gap: 4rem; align-items: start; margin-top: 4rem;">
            
            <!-- Formulario de Contacto -->
            <div class="contact-form-wrapper" style="background: rgba(255, 255, 255, 0.05); border-radius: var(--border-radius); padding: 3rem; border: 1px solid rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px);">
                <h3 style="font-family: var(--font-heading); font-size: 2rem; color: var(--sushi-white); margin-bottom: 2.5rem; text-align: center;">
                    Envíanos tu mensaje
                </h3>
                
                <form class="contact-form" style="display: grid; gap: 2rem;">
                    <!-- Fila de Nombre y Email -->
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
                        <div class="form-group">
                            <label for="nombre" class="form-label">
                                <i class="fas fa-user" style="margin-right: 0.5rem; color: var(--sushi-red);"></i>
                                Nombre completo
                            </label>
                            <input 
                                type="text" 
                                id="nombre" 
                                class="form-input"
                                placeholder="Tu nombre completo"
                                required
                            >
                        </div>

                        <div class="form-group">
                            <label for="email" class="form-label">
                                <i class="fas fa-envelope" style="margin-right: 0.5rem; color: var(--sushi-red);"></i>
                                Correo electrónico
                            </label>
                            <input 
                                type="email" 
                                id="email" 
                                class="form-input"
                                placeholder="nombre@ejemplo.com"
                                required
                            >
                        </div>
                    </div>

                    <!-- Fila de Teléfono y Asunto -->
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
                        <div class="form-group">
                            <label for="telefono" class="form-label">
                                <i class="fas fa-phone" style="margin-right: 0.5rem; color: var(--sushi-red);"></i>
                                Teléfono
                            </label>
                            <input 
                                type="tel" 
                                id="telefono" 
                                class="form-input"
                                placeholder="+54 9 2273 413007"
                            >
                        </div>

                        <div class="form-group">
                            <label for="asunto" class="form-label">
                                <i class="fas fa-tag" style="margin-right: 0.5rem; color: var(--sushi-red);"></i>
                                Asunto
                            </label>
                            <select id="asunto" class="form-input" required>
                                <option value="">Seleccioná el motivo</option>
                                <option value="reserva">Take Away</option>
                                <option value="pedido">Delivery</option>
                                <option value="catering">Servicio de catering</option>
                                <option value="consulta">Consulta general</option>
                                <option value="sugerencia">Sugerencia</option>
                            </select>
                        </div>
                    </div>

                    <!-- Campo Mensaje -->
                    <div class="form-group">
                        <label for="mensaje" class="form-label">
                            <i class="fas fa-comment" style="margin-right: 0.5rem; color: var(--sushi-red);"></i>
                            Mensaje
                        </label>
                        <textarea 
                            id="mensaje" 
                            rows="6"
                            class="form-input"
                            placeholder="Contanos en detalle tu consulta o pedido..."
                            required
                        ></textarea>
                    </div>

                    <!-- Botón de envío -->
                    <button 
                        type="submit" 
                        class="sushi-btn sushi-btn-primary"
                        style="width: 100%; justify-content: center; margin-top: 1rem; font-size: 1.1rem; padding: 1.2rem;"
                    >
                        <i class="fas fa-paper-plane" style="margin-right: 0.8rem;"></i>
                        Enviar mensaje
                    </button>
                </form>
            </div>

            <!-- Información de Contacto -->
            <div class="contact-info-wrapper" style="display: flex; flex-direction: column; gap: 2rem;">
                
                <!-- WhatsApp Directo -->
                <div class="whatsapp-card" style="background: linear-gradient(135deg, var(--sushi-black) 0%, #1a1a1a 100%); border-radius: var(--border-radius); padding: 2.5rem; text-align: center; border: 2px solid var(--sushi-red);">
                    <div style="margin-bottom: 1.5rem;">
                        <div style="background: var(--sushi-red); width: 70px; height: 70px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                            <i class="fab fa-whatsapp" style="color: white; font-size: 2rem;"></i>
                        </div>
                        <h4 style="font-family: var(--font-heading); color: var(--sushi-white); margin-bottom: 0.5rem; font-size: 1.3rem;">Pedidos por WhatsApp</h4>
                        <p style="color: var(--sushi-gray-light); font-size: 0.9rem;">Respuesta inmediata</p>
                    </div>
                    <a href="https://wa.me/5492901300080" target="_blank" class="sushi-btn sushi-btn-primary" style="width: 100%; justify-content: center;">
                        <i class="fab fa-whatsapp" style="margin-right: 0.5rem;"></i>
                        Escribinos ahora
                    </a>
                </div>

                <!-- Información de Contacto -->
                <div class="info-cards" style="display: flex; flex-direction: column; gap: 1.5rem;">
                    
                    <!-- Ubicación -->
                    <div class="info-card" style="background: rgba(255, 255, 255, 0.05); border-radius: var(--border-radius); padding: 1.5rem; border-left: 4px solid var(--sushi-red);">
                        <div style="display: flex; align-items: center; gap: 1rem;">
                            <div style="background: var(--sushi-red); width: 45px; height: 45px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-map-marker-alt" style="color: white; font-size: 1.1rem;"></i>
                            </div>
                            <div>
                                <h5 style="color: var(--sushi-white); font-weight: 600; margin-bottom: 0.3rem;">Ubicación</h5>
                                <p style="color: var(--sushi-gray-light); margin: 0; font-size: 0.9rem;">Ushuaia, Tierra del Fuego</p>
                            </div>
                        </div>
                    </div>

                    <!-- Teléfono -->
                    <div class="info-card" style="background: rgba(255, 255, 255, 0.05); border-radius: var(--border-radius); padding: 1.5rem; border-left: 4px solid var(--sushi-red);">
                        <div style="display: flex; align-items: center; gap: 1rem;">
                            <div style="background: var(--sushi-red); width: 45px; height: 45px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-phone" style="color: white; font-size: 1.1rem;"></i>
                            </div>
                            <div>
                                <h5 style="color: var(--sushi-white); font-weight: 600; margin-bottom: 0.3rem;">Teléfono</h5>
                                <a href="tel:+5492901300080" style="color: var(--sushi-gray-light); text-decoration: none; font-size: 0.9rem;">+54 9 2901 300080</a>
                            </div>
                        </div>
                    </div>

                    <!-- Instagram -->
                    <div class="info-card" style="background: rgba(255, 255, 255, 0.05); border-radius: var(--border-radius); padding: 1.5rem; border-left: 4px solid var(--sushi-red);">
                        <div style="display: flex; align-items: center; gap: 1rem;">
                            <div style="background: var(--sushi-red); width: 45px; height: 45px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                <i class="fab fa-instagram" style="color: white; font-size: 1.1rem;"></i>
                            </div>
                            <div>
                                <h5 style="color: var(--sushi-white); font-weight: 600; margin-bottom: 0.3rem;">Instagram</h5>
                                <a href="https://instagram.com/hugo_sushi" target="_blank" style="color: var(--sushi-gray-light); text-decoration: none; font-size: 0.9rem;">@hugo_sushi</a>
                            </div>
                        </div>
                    </div>

                    <!-- Horarios -->
                    <div class="info-card" style="background: rgba(255, 255, 255, 0.05); border-radius: var(--border-radius); padding: 1.5rem; border-left: 4px solid var(--sushi-red);">
                        <div style="display: flex; align-items: center; gap: 1rem;">
                            <div style="background: var(--sushi-red); width: 45px; height: 45px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-clock" style="color: white; font-size: 1.1rem;"></i>
                            </div>
                            <div>
                                <h5 style="color: var(--sushi-white); font-weight: 600; margin-bottom: 0.3rem;">Horarios</h5>
                                <p style="color: var(--sushi-gray-light); margin: 0; font-size: 0.9rem;">
                                    Lun-Sáb: 18:00-22:30<br>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Mapa -->
                <div class="map-card" style="background: rgba(255, 255, 255, 0.05); border-radius: var(--border-radius); padding: 2rem; text-align: center; border: 1px solid rgba(255, 255, 255, 0.1);">
                    <h4 style="font-family: var(--font-heading); color: var(--sushi-white); margin-bottom: 1.5rem; font-size: 1.2rem;">¿Cómo llegar?</h4>
                    <div style="background: rgba(255, 255, 255, 0.1); border-radius: 10px; padding: 1.5rem; margin-bottom: 1.5rem;">
                        <i class="fas fa-map" style="font-size: 2rem; color: var(--sushi-red); margin-bottom: 0.8rem;"></i>
                        <p style="color: var(--sushi-gray-light); margin: 0; font-size: 0.9rem;">Ushuaia<br>Tierra del Fuego, Argentina</p>
                    </div>
                    <a href="https://maps.google.com/?q=Hipolito+Bouchard+879+Ushuaia+Tierra+del+Fuego" target="_blank" class="sushi-btn sushi-btn-outline" style="width: 100%; justify-content: center;">
                        <i class="fas fa-directions" style="margin-right: 0.5rem;"></i>
                        Ver en Google Maps
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
<script>
    document.querySelector('.contact-form')?.addEventListener('submit', function(e) {
        e.preventDefault();
        const formData = {
            nombre: document.getElementById('nombre').value,
            email: document.getElementById('email').value,
            telefono: document.getElementById('telefono').value,
            asunto: document.getElementById('asunto').value,
            mensaje: document.getElementById('mensaje').value
        };
        console.log('Formulario enviado:', formData);
        alert('¡Gracias por tu mensaje! Te contactaremos pronto.');
        this.reset();
    });
</script>
{% endblock %}